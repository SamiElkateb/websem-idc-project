@prefix :<http://project-kitchenchef.fr/schema#> .
@prefix recipes:<http://project-kitchenchef.fr/recipes/data#> .
@prefix measurements:<http://project-kitchenchef.fr/measurements/data#> .

CONSTRUCT {
    ?subj ?pred ?obj .
    ?ingredient :unit measurements:Ounce .
} WHERE {
    ?subj ?pred ?obj .
    ?ingredient :unit ?unit .
    FILTER (!REGEX(?obj, "^(\\.z|oz\\.?|ounces?)$", "i"))
    FILTER REGEX(?unit, "(\\.z|oz\\.?|ounces?)", "i")
}

