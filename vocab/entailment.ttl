@prefix food: <http://project-kitchenchef.fr/food/data#> .

:complementaryRecipe a owl:ObjectProperty .

:RecipeWithArachis a owl:Class ;
  rdfs:label ""@en, ""@fr ;
  rdfs:comment ""@en,
              ""@fr ;
  owl:equivalentClass [
    a owl:Restriction ;
    owl:onProperty :hasIngredient ;
    owl:someValuesFrom [
        a owl:Restriction ;
        owl:onProperty :food ;
        owl:someValuesFrom [
          a owl:Restriction ;
          owl:onProperty skos:broaderTransitive ;
          owl:hasValue food:Arachis 
      ] 
    ]
  ] .

:ArachisFreeRecipe a owl:Class; 
  :complementaryRecipe :RecipeWithArachis .

