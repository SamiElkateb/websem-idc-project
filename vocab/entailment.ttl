:RecipeWithMeatOrFish a owl:Class ;
  rdfs:label "Recipe with meat or fish"@en, "Recette avec viande ou poisson"@fr ;
  rdfs:comment "A recipe that includes meat or fish as an ingredient"@en,
              "Une recette qui comprend de la viande ou du poisson comme ingr√©dient"@fr ;
  owl:unionOf (
    [
      a owl:Restriction ;
      owl:onProperty :hasIngredient ;
      owl:someValuesFrom [
          a owl:Restriction ;
          owl:onProperty :food ;
          owl:someValuesFrom [
            a owl:Restriction ;
            owl:onProperty skos:broaderTransitive ;
            owl:hasValue food:Meat 
        ] 
      ]
    ]
    [
      a owl:Restriction ;
      owl:onProperty :hasIngredient ;
      owl:someValuesFrom [
          a owl:Restriction ;
          owl:onProperty :food ;
          owl:someValuesFrom [
            a owl:Restriction ;
            owl:onProperty skos:broaderTransitive ;
            owl:hasValue food:Fish 
        ] 
      ]
    ]
  ) .

:VegetarianRecipe a owl:Class; 
  :complementaryRecipe :RecipeWithMeatOrFish .
